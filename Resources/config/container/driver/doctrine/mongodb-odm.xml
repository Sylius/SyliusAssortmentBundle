<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>
        <parameter key="sylius_assortment.manager.product.class">Sylius\Bundle\AssortmentBundle\Document\ProductManager</parameter>
        <parameter key="sylius_assortment.sorter.product.class">Sylius\Bundle\AssortmentBundle\Sorting\MongoDB\ProductSorter</parameter>

        <parameter key="sylius_assortment.manager.option.class">Sylius\Bundle\AssortmentBundle\Document\Option\OptionManager</parameter>
    </parameters>

    <services>
        <service id="sylius_assortment.manager.product" class="%sylius_assortment.manager.product.class%">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument>%sylius_assortment.model.product.class%</argument>
        </service>
        <service id="sylius_assortment.sorter.product" class="%sylius_assortment.sorter.product.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="sylius_assortment.manager.option" class="%sylius_assortment.manager.option.class%">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument>%sylius_assortment.model.option.class%</argument>
        </service>
    </services>

</container>
